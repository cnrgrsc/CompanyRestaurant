@    using CompanyRestaurant.MVC.Models.ViewModels.MaterialVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.MaterialVM;

@model UpdateMaterialVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Malzeme Güncelle</h3>
        </div>
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Malzeme Adı</label>
                    <input asp-for="MaterialName" class="form-control" placeholder="Malzeme adı girin">
                    <span asp-validation-for="MaterialName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <input asp-for="Price" class="form-control" placeholder="Fiyat girin">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Stok</label>
                    <input asp-for="UnitInStock" class="form-control" placeholder="Stok girin">
                    <span asp-validation-for="UnitInStock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Tedarikçi</label>
                    <select asp-for="SupplierId" asp-items="@ViewBag.SuppliersSelect" class="form-control">
                        <option value="">Lütfen tedarikçi Seçiniz</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label>Aktif mi?</label>
                    <div>
                        <label>
                            <input type="radio" asp-for="IsActive" value="true" checked />
                            Evet
                        </label>
                        <label>
                            <input type="radio" asp-for="IsActive" value="false" />
                            Hayır
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>

