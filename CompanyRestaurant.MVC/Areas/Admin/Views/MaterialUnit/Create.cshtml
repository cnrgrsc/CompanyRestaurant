@using CompanyRestaurant.MVC.Models.ViewModels.MaterialUnitVM;


@model CreateMaterialUnitVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Malzeme-Birim Oluştur</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>Birim</label>
                    <input asp-for="Unit" type="text" class="form-control" placeholder="Birim girin">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Açıklama girin">
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

