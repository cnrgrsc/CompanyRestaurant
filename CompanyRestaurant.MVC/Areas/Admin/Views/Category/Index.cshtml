@model IEnumerable<CompanyRestaurant.MVC.Models.CategoryVM.CategoryViewModel>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Kategori Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>Ürün Sayısı</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>@category.ProductCount</td>
                <td>
                    @if (category.IsActive)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Details", "Category", new { id = category.Id })" class="btn btn-info">Detaylar</a>
                    <a href="@Url.Action("Delete", "Category", new { id = category.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
