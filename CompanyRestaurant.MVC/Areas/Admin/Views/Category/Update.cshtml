@using CompanyRestaurant.MVC.Models.ViewModels.CategoryVM;

@model UpdateCategoryVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kategori Oluştur</h3>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Kategori Ad</label>
                    <input asp-for="CategoryName" type="text" class="form-control" placeholder="Kategori adı girin">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" cols="5" rows="3" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Aktif mi?</label>
                    <div>
                        <label>
                            <input type="radio" asp-for="IsActive" value="true" checked />
                            Evet
                        </label>
                        <label>
                            <input type="radio" asp-for="IsActive" value="false" />
                            Hayır
                        </label>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>

