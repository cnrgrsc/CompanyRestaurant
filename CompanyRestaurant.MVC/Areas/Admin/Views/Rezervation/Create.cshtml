@    using CompanyRestaurant.MVC.Models.ViewModels.RezervationVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.RezervationVM
@model CreateRezervationVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Rezervasyon Oluştur</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Kişi adı girin">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Soyadı</label>
                    <input asp-for="Surname" class="form-control" placeholder="Kişi soyadı girin">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Telefon</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Kişi telefon girin">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Kişi mail girin">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Tarih</label>
                    <input asp-for="Date" class="form-control" placeholder="Tarih girin">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Masa</label>
                    <select asp-for="TableId" asp-items="@ViewBag.TablesSelect" class="form-control">
                        <option value="">Lütfen masa Seçiniz</option>
                    </select>
                    <span asp-validation-for="TableId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" cols="5" rows="3" class="form-control"></textarea>
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

