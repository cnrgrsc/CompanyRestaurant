@model IEnumerable<CompanyRestaurant.MVC.Models.TableVM.TableViewModel>

@{
    ViewData["Title"] = "Masa Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Masa Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Masa Numarası</th>
            <th>Kişi Kapasitesi</th>
            <th>Rezervasyon Durumu</th>
            <th>Masa Konumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TableNo</td>
                <td>@item.PersonCapacity</td>
                <td>@(item.IsReserved ? "Rezerve Edildi" : "Rezerve Edilmedi")</td>
                <td>@item.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>