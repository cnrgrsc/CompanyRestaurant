@    using CompanyRestaurant.MVC.Models.ViewModels.TableVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.TableVM
@model CreateTableVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Masa Oluştur</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Masa Numarası</label>
                    <input asp-for="TableNo" class="form-control" placeholder="Masa numarası girin">
                    <span asp-validation-for="TableNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Rezervasyon Durumu</label>
                    <input asp-for="RezStatus" class="form-control" placeholder="Rezervasyon durumu girin">
                    <span asp-validation-for="RezStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Kişi Kapasitesi</label>
                    <input asp-for="PersonCapacity" class="form-control" placeholder="Kişi kapasitesi girin">
                    <span asp-validation-for="PersonCapacity" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

