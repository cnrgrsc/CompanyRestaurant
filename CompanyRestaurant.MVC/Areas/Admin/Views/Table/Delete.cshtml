@model CompanyRestaurant.MVC.Models.TableVM.TableViewModel

@{
    ViewData["Title"] = "Masa Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="alert alert-danger">
        <strong>Uyarı!</strong> Bu masayı silmek istediğinizde geri alınamaz. Masa Numarası: @Model.TableNo
    </div>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>