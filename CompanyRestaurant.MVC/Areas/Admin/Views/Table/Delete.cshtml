@using CompanyRestaurant.MVC.Models.ViewModels.TableVM

@model DeleteTableVM

@{
    ViewData["Title"] = "Delete Table";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Model.TableNo Sil</h3>

<!-- Ürün bilgilerini göster -->
<div>
    <p>Masa Numarası: @Model.TableNo</p>
    <p>Rezervasyon durumu: @Model.RezStatus</p>
    <p>Kişi Kapasitesi: @Model.PersonCapacity</p>
    <p>Aktif: @(Model.IsActive ? "Evet" : "Hayır")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>@Model.TableNo numaralı masayı silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
