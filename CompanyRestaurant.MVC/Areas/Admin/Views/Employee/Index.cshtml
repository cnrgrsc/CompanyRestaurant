@model IEnumerable<CompanyRestaurant.MVC.Models.EmployeeVM.EmployeeViewModel>
@{
    ViewData["Title"] = "Çalışan Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Çalışan Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Unvan</th>
            <th>Telefon Numarası</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Title</td>
                <td>@employee.Phone</td>
                <td>
                    <a href="@Url.Action("Details", "Employee", new { id = employee.Id })" class="btn btn-info">Detay</a>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
