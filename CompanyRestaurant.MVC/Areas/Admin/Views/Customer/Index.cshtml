@model IEnumerable<CompanyRestaurant.MVC.Models.CustomerVM.CustomerViewModel>

@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Telefon Numarası</th>
            <th>E-Posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
