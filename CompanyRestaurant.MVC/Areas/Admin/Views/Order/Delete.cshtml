@using CompanyRestaurant.MVC.Models.ViewModels.OrderVM;

@model DeleteOrderVM

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Model.OrderName Sil</h3>

<!-- Ürün bilgilerini göster -->
<div>
    <p>Adı: @Model.OrderName</p>
    <p>Fiyatı: @Model.Price</p>
    <p>Ödeme biçimi: @Model.PaymentType</p>
    <p>Garson: @Model.EmployeeId</p>
    <p>Masa: @Model.TableId</p>

    <p>Aktif: @(Model.IsActive ? "Evet" : "Hayır")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>@Model.OrderName Siparişini silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
