@model CompanyRestaurant.MVC.Models.OrderVM.OrderViewModel

@{
    ViewData["Title"] = "Yeni Sipariş Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OrderName"></label>
        <input asp-for="OrderName" class="form-control" />
        <span asp-validation-for="OrderName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentType"></label>
        <select asp-for="PaymentType" class="form-control">
            <option value="">-- Ödeme Tipi Seçin --</option>
            @foreach (var item in Enum.GetValues(typeof(CompanyRestaurant.Entities.Enums.PaymentType)))
            {
                <option value="@item">@item</option>
            }
        </select>
        <span asp-validation-for="PaymentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" asp-items="@ViewBag.EmployeesSelect" class="form-control">
            <option value="">Lütfen Çalışan Seçiniz</option>
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TableId"></label>
        <select asp-for="TableId" asp-items="@ViewBag.TablesSelect" class="form-control">
            <option value="">Lütfen Masa Seçiniz</option>
        </select>
        <span asp-validation-for="TableId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentId"></label>
        <select asp-for="CurrentId" asp-items="@ViewBag.CurrentsSelect" class="form-control">
            <option value="">Lütfen Şirket Adı Seçiniz</option>
        </select>
        <span asp-validation-for="CurrentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate"></label>
        <input asp-for="CreatedDate" class="form-control" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" class="form-control" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>