@    using CompanyRestaurant.MVC.Models.ViewModels.RecipeVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.RecipeVM

@model DeleteRecipeVM

@{
    ViewData["Title"] = "Delete Recipe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Model.Name Sil</h3>

<!-- Ürün bilgilerini göster -->
<div>
    <p>Reçete Adı: @Model.Name</p>
    <p>Aktif: @(Model.IsActive ? "Evet" : "Hayır")</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Reçete Resmi" style="max-width:100px;">
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>@Model.Name Reçetesini silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
