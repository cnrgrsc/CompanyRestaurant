@model IEnumerable<CompanyRestaurant.MVC.Models.UnitStockVM.UnitStockViewModel>

@{
    ViewData["Title"] = "Stok Birimleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Stok Birimi Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Stok Miktarı</th>
            <th>Kritik Stok Seviyesi</th>
            <th>Minimum Stok Seviyesi</th>
            <th>Kritik Seviyeye Ulaşıldı mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Stock</td>
                <td>@item.CriticalStock</td>
                <td>@item.MinimumStockLevel</td>
                <td>@(item.IsCriticalLevelReached ? "Evet" : "Hayır")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>