@    using CompanyRestaurant.MVC.Models.ViewModels.UnitStockVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.UnitStockVM;


@model UpdateUnitStockVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Birim-Stok Güncelle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>Malzeme</label>
                    <select asp-for="MaterialID" asp-items="@ViewBag.MaterialsSelect" class="form-control">
                        <option value="">Lütfen Malzeme Seçiniz</option>
                    </select>
                    <span asp-validation-for="MaterialID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input asp-for="Stock" type="number" class="form-control" placeholder="Stok girin">
                </div>
                <div class="form-group">
                    <label>Kritik Stok</label>
                    <input asp-for="CriticalStock" type="number" class="form-control" placeholder="Kritik Stok girin">
                </div>
                <div class="form-group">
                    <label>Minimum Stok</label>
                    <input asp-for="MinimumStockLevel" type="number" class="form-control" placeholder="Minimum Stok girin">
                </div>

                <div class="form-group">
                    <label>Aktif mi?</label>
                    <div>
                        <label>
                            <input type="radio" asp-for="IsActive" value="true" checked />
                            Evet
                        </label>
                        <label>
                            <input type="radio" asp-for="IsActive" value="false" />
                            Hayır
                        </label>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

