@model CompanyRestaurant.MVC.Models.SupplierVM.SupplierViewModel

@{
    ViewData["Title"] = "Tedarikçi Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="details-view">
    <dl class="dl-horizontal">
        <dt>Şirket Adı</dt>
        <dd>@Model.CompanyName</dd>

        <dt>Şehir</dt>
        <dd>@Model.City</dd>

        <dt>Adres</dt>
        <dd>@Model.Address</dd>

        <dt>E-posta</dt>
        <dd>@Model.Email</dd>

        <dt>Telefon Numarası</dt>
        <dd>@Model.Phone</dd>

        <dt>İletişim Kişisi</dt>
        <dd>@Model.ContactPerson</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div>