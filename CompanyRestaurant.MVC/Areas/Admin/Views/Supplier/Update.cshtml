@    using CompanyRestaurant.MVC.Models.ViewModels.SupplierVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.SupplierVM;


@model UpdateSupplierVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Tedarikçi Güncelle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Şirket Adı</label>
                    <input asp-for="CompanyName" class="form-control" placeholder="Şirket adı girin">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Adres</label>
                    <input asp-for="Address" class="form-control" placeholder="Adres girin">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Mail</label>
                    <input asp-for="Email" class="form-control" placeholder="Mail girin">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input asp-for="Phone" class="form-control" placeholder="Telefon girin">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>İlgili kşi</label>
                    <input asp-for="ContactPerson" class="form-control" placeholder="İlgili kişi girin">
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Aktif mi?</label>
                    <div>
                        <label>
                            <input type="radio" asp-for="IsActive" value="true" checked />
                            Evet
                        </label>
                        <label>
                            <input type="radio" asp-for="IsActive" value="false" />
                            Hayır
                        </label>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>

