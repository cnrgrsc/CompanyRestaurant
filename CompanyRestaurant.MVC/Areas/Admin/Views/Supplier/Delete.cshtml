@using CompanyRestaurant.MVC.Models.ViewModels.SupplierVM

@model DeleteSupplierVM

@{
    ViewData["Title"] = "Delete Supplier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Model.CompanyName Sil</h3>

<!-- Ürün bilgilerini göster -->
<div>
    <p>Şirket Adı: @Model.CompanyName</p>
    <p>Adres: @Model.Address</p>
    <p>Mail: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <p>İlgili Kişi: @Model.ContactPerson
    </p>
    <p>Aktif: @(Model.IsActive ? "Evet" : "Hayır")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>@Model.CompanyName ürününü silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
