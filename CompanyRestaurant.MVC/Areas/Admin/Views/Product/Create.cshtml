@    using CompanyRestaurant.MVC.Models.ViewModels.ProductVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.ProductVM
@model CreateProductVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ürün Oluştur</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Ürün Adı</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Ürün adı girin">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <input asp-for="Price" class="form-control" placeholder="Fiyat girin">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Kategori</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.CategoriesSelect" class="form-control">
                        <option value="">Lütfen Kategori Seçiniz</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" cols="5" rows="3" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label>Ürün Resmi</label>
                    <input asp-for="ProductImage" type="file" class="form-control" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

