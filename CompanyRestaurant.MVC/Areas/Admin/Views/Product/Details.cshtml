@model CompanyRestaurant.MVC.Models.ProductVM.ProductViewModel

@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Ürün Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitInStock)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt class="col-sm-2">
            Ürün Resmi
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProductImage" alt="Ürün Resmi" style="max-width: 300px;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>