@    using CompanyRestaurant.MVC.Models.ViewModels.ProductVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.ProductVM

@model DeleteProductVM

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Model.ProductName Sil</h3>

<!-- Ürün bilgilerini göster -->
<div>
    <p>Ürün Adı: @Model.ProductName</p>
    <p>Fiyat: @Model.Price</p>
    <p>Açıklama: @Model.Description</p>
    <p>Aktif: @(Model.IsActive ? "Evet" : "Hayır")</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Ürün Resmi" style="max-width:100px;">
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>@Model.ProductName ürününü silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
