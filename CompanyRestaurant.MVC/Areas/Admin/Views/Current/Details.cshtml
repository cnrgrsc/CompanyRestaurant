@model CompanyRestaurant.Models.CurrentViewModel

@{
    ViewData["Title"] = "Cari Hesap Detayları";
}

<h2>@ViewData["Title"]</h2>

<div class="details-view">
    <dl class="dl-horizontal">
        <dt>Hesap Numarası</dt>
        <dd>@Model.AccountNumber</dd>

        <dt>Şirket Adı</dt>
        <dd>@Model.CompanyName</dd>

        <dt>İletişim Adı</dt>
        <dd>@Model.ContactName</dd>

        <dt>İletişim E-Postası</dt>
        <dd>@Model.ContactEmail</dd>

        <dt>İletişim Telefonu</dt>
        <dd>@Model.ContactPhone</dd>

        <dt>Adres</dt>
        <dd>@Model.Address</dd>

        <dt>Vergi Numarası</dt>
        <dd>@Model.TaxNumber</dd>

        <dt>Vergi Dairesi</dt>
        <dd>@Model.TaxOffice</dd>

        <dt>Bakiye</dt>
        <dd>@Model.Balance.ToString("C")</dd>

        <dt>Sipariş Sayısı</dt>
        <dd>@Model.OrderCount</dd>
    </dl>
</div>

<a href="@Url.Action("Index")" class="btn btn-default">Geri</a>
