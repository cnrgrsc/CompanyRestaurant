@    using CompanyRestaurant.MVC.Models.ViewModels.MaterialPriceVM;
    using CompanyRestaurant.MVC.Areas.Admin.Models.ViewModels.MaterialPriceVM;


@model CreateMaterialPriceVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Malzeme-Fiyat Oluştur</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>Adı</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Ad girin">
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input asp-for="Price" type="text" class="form-control" placeholder="Fiyat girin">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Açıklama girin">
                </div>
                
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

